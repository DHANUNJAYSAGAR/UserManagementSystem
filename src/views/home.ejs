<%- include('partials/_header'); -%>

<div align="right" ><a href="/" class="btn btn-info" >Add User</a></div>
<div class="offset-md-5" ><h2>User Details</h2></div>
<div class="col-sm-5 ">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead >
            <tr class="table-primary">
              <td>Id</td>
              <td>Name</td>
              <td>Father Name</td>
              <td>Email</td>
              <td>Phone</td>
              <td>College</td>
              <td>Address</td>
              <td>Hobbies</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr class="table-success">
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].username %></td>
                  <td><%= data[i].fathername %></td>
                  <td><%= data[i].email %></td>
                  <td><%= data[i].phone %></td>
                  <td><%= data[i].college %></td>
                  <td><%= data[i].per_address %></td>
                  <td><%= data[i].hobbies %></td>
                  <td>
                    <a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
    </div>
</div>
</div>
<%- include('partials/_footer'); -%>