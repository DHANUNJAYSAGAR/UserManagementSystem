<%- include('partials/_header'); -%>

<div class="container mt-5">
  <div class="row">
    <div class="offset-md-3" ><h2 >Edit User </h2></div>
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          
          <div class="form-group">
            <label  class="col-form-label-md" > User Name<font color="red">*</font></label>
              <div class="">
            <input type="text" name="username" id="username"  value="<%= data.username%>" placeholder="Name" class="form-control" autofocus required>
          </div></div>
          <div class="form-group">
              <label  class="col-form-label-md" > Father Name<font color="red">*</font></label>
              <input type="text" name="fathername" placeholder="Father Name" value="<%= data.fathername%>" class="form-control" autofocus required>
            </div>
            
            <div class="form-group">
              <label  class="col-form-label-md" > Email<font color="red">*</font></label>
              <input type="email" name="email" placeholder="example@gmail.com" value="<%= data.email%>"  class="form-control" autofocus required>
              
            </div>
            <div class="form-group">
              <label  class="col-form-label-md" > Phone Number<font color="red">*</font></label>
              <input type="number" name="phone" placeholder="Phone" class="form-control" value="<%= data.phone%>"  autofocus required minlength="10">
            </div>
            
            <div class="form-group">
              <label  class="col-form-label-md" >College<font color="red">*</font></label>
            <input type="text" name="college" placeholder="College" value="<%= data.college%>" class="form-control"  required>
            </input>
          </div>
            
          <div class="form-group">
              <label  class="col-form-label-md" >Address<font color="red">*</font></label>
            <input type="text" name="per_address" placeholder="Address" class="form-control" value="<%= data.per_address%>" required>
            
          </div>
          <div class="form-group">
              <label  class="col-form-label-md" > Hobbies</label>
            <input type="text" name="hobbies" placeholder="Hobbies" class="form-control" value="<%= data.hobbies%>"  autofocus >
              
          </div>
          <div class="form-group">
              <label  class="col-form-label-md" > Password<font color="red">*</font></label>
              <input type="password" name="password" placeholder="Password " class="form-control" value="<%= data.password%>" required minlength="6">
              
              <small>Password should contain atleast 6 characters</small>
              <small><font color="red">*</font> fields are mandatory..</small>
            </div>
            <div>
          
          <button type="submit" class="btn btn-primary">
            Update User
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer'); -%>